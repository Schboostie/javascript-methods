// doubleValues: takes an array of numbers and returns an array with each value doubled.

function doubleValues(arr) {
  return arr.map((num) => num * 2);
}

console.log(doubleValues([1, 2, 3])); // Output: [2, 4, 6]

//capitalizeWords: takes an array of words and returns an array with each word capitalized.


function capitalizeWords(arr) {
  return arr.map((word) => word.charAt(0).toUpperCase() + word.slice(1));
}

console.log(capitalizeWords(["hello", "world"])); // Output: ["Hello", "World"]
addOne: takes an array of numbers and returns an array with each value incremented by 1.

function addOne(arr) {
  return arr.map((num) => num + 1);
}

console.log(addOne([1, 2, 3])); // Output: [2, 3, 4]

//filterWords: takes an array of words and a string, and returns an array with only the words that include the given string.

function filterWords(arr, str) {
  return arr.filter((word) => word.includes(str));
}

console.log(filterWords(["hello", "world", "hi"], "h")); // Output: ["hello", "hi"]

//toUppercase: takes an array of strings and returns an array with each string converted to uppercase.

function toUppercase(arr) {
  return arr.map((str) => str.toUpperCase());
}

console.log(toUppercase(["hello", "world"])); // Output: ["HELLO", "WORLD"]

//sumArray: takes an array of numbers and returns the sum of all the values.


function sumArray(arr) {
  return arr.reduce((acc, num) => acc + num, 0);
}

console.log(sumArray([1, 2, 3])); // Output: 6


//filterEven: takes an array of numbers and returns an array with only the even values.

function filterEven(arr) {
  return arr.filter((num) => num % 2 === 0);
}

console.log(filterEven([1, 2, 3, 4])); // Output: [2, 4]


//joinArray: takes an array of strings and returns a single string with all the values joined together.

function joinArray(arr) {
  return arr.join("");
}

console.log(joinArray(["hello", "world"])); // Output: "helloworld"

//reverseArray: takes an array and returns a new array with the elements in reverse order.

function reverseArray(arr) {
  return arr.reverse();
}

console.log(reverseArray([1, 2, 3])); // Output: [3, 2, 1]




